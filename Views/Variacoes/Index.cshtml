@model IEnumerable<RiskDegree.Models.Variacoes>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dia)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ano)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Mes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroInfectados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroMortes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumeroRecuperados)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IdpatologiaNavigation)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dia)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Ano)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Mes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroInfectados)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroMortes)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumeroRecuperados)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdpatologiaNavigation.Id)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
